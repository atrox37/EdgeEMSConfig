{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pcmanagement",
  "version": "0.1.0",
  "identifier": "com.zhiyuanwang.pcmanagement",
  "build": {
    "beforeDevCommand": "pnpm web:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build && node script/type-check-build.js",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Norton creek solar energy center",
        "width": 1500,
        "height": 800,
        "minWidth": 1050,
        "minHeight": 630,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src 'self' http://192.168.30.166:* http://localhost:* http://127.0.0.1:*; font-src 'self' asset: data:;",
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../dist-isolation"
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlERDFDMDkzNDk1RTA4MDcKUldRSENGNUprOERSblkxVk1IMXV1QzY1V0x1NEFRelRNbDViQTRoYXBRMzdwcTVTT0E3YjVUbEcK",
      "endpoints": [
        "https://edge-desktop-configuration-application.s3.us-east-2.amazonaws.com/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
